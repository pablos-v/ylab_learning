<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_tables" author="pavel_kuzmin">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="persons"/>
                <tableExists tableName="resources"/>
                <tableExists tableName="bookings"/>
            </not>
        </preConditions>

        <createTable schemaName="entities" tableName="persons">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('entities.person_id')">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="login" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(64)"/>
        </createTable>

        <createTable schemaName="entities" tableName="resources">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('entities.resource_id')">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="type" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(64)"/>
            <column name="rent_price" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable schemaName="entities" tableName="bookings">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('entities.booking_id')">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <!--            foreign key-->
            <column name="resource_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk-resource-id" references="entities.resources(id)"/>
            </column>
            <!--            foreign key-->
            <column name="person_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk-person-id" references="entities.persons(id)"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>