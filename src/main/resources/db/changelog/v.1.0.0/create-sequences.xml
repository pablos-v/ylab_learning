<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_sequences" author="pavel_kuzmin">

        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="person_id"/>
                <sequenceExists sequenceName="resource_id"/>
                <sequenceExists sequenceName="booking_id"/>
            </not>
        </preConditions>

        <createSequence schemaName="entities"
                        sequenceName="person_id"
                        startValue="1"
                        incrementBy="1"/>
        <createSequence schemaName="entities"
                        sequenceName="resource_id"
                        startValue="1"
                        incrementBy="1"/>
        <createSequence schemaName="entities"
                        sequenceName="booking_id"
                        startValue="1"
                        incrementBy="1"/>
    </changeSet>

</databaseChangeLog>